{
  "description": "API for search a word",
  "request": {
    "parameters": {
      "word": "string",
      "exact": "string",
      "'page[offset]'": "string",
      "'page[limit]'": "string"
    }
  },
  "response": {
    "data": {
      "type": "Word",
      "name": "word",
      "relationships": {
        "pos": {
          "type": "PartOfSpeech",
          "name": "pos",
          "cardinality": "one",
          "included": true
        }
      }
    },
    "meta": {
      "pagination": true
    }
  }
}
